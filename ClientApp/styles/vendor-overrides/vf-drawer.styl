// vendor override
.navigation-drawer
    .toolbar__content > :not(.btn):not(.menu):last-child:not(:only-child)
        margin-right auto

    .list
        padding 0

        a, .icon
            color: grey

            &:hover
                color: $light-purple!important
                background  alpha(lighten($dark-purple, 8%), 0.5)!important


                .icon
                    color: $light-purple!important

    .list .router-link-exact-active .list__tile, .list .router-link-exact-active .icon
        color $light-purple!important
        background-color alpha(lighten($dark-purple, 8%), 0.5)!important

    .list .icon
        font-size: 1rem;
        text-align: center;
        margin: 0 auto;

    .list__tile__title
        font-size 14px

    .list__tile__action
        min-width 45px

    .list .icon
        font-size 10px

    .toolbar
        background linear-gradient(to right, $dark-purple, $pink)
        position relative

        &:after
            background-image url("../../assets/nav-bg.png")
            background-size 100% 100%
            content ""
            opacity: 0.75
            top 0
            left 0
            bottom 0
            right 0
            position absolute
            z-index -1

        .toolbar__content button
            margin-left 1.5rem
            position absolute
            color white