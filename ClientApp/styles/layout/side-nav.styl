.side-nav
    height 100vh
    background $dark-purple
    border-left 5px $pink solid

    a
        text-decoration none

    .toolbar
        background linear-gradient(to right, $dark-purple, $pink)
        position relative

        &:after
            background-image url("../../assets/nav-bg.png")
            background-size: 100% 100%
            content: "";
            opacity: 0.75;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            position: absolute;
            z-index: -1;

        .logo
            width 100px
            margin 0 auto

        button
            color white
            position absolute
            left 18px
            color: $pink